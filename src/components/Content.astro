  </main>

  <style>
    #content {
      z-index: 1;
      position: relative;
      font-family:
        Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial,
        sans-serif;
    }

    main {
      padding: 64px;
      max-width: 500px;
      font-weight: 400;
      font-size: 15px;
      padding-bottom: 192px;

      @media (orientation: portrait) {
        padding: 42px;
      }
    }

    h1 {
      margin: 0;
      margin-top: 48px;
      font-size: 64px;
      color: #222;
      font-weight: 500;
      font-family: 'Editorial Old', serif;
      font-variant-ligatures: discretionary-ligatures;
      position: sticky;
      top: 32px;
      z-index: 10;
      display: flex;
      align-items: baseline;
      width: max-content;
      padding-right: 12px;
      border-radius: 6px;
      isolation: isolate;

      @media (orientation: portrait) {
        font-size: 50px;
        padding-left: 0;
        text-align: center;
        margin-inline: auto;
      }
    }

    .title-text {
      position: relative;
      z-index: 9;
    }

    .gradient-blur {
      --blur-overscan: 40px;
      position: fixed;
      z-index: 5;
      inset: calc(-1 * var(--blur-overscan)) 0 auto 0;
      height: calc(220px + var(--blur-overscan));
      min-height: calc(220px + var(--blur-overscan) + env(safe-area-inset-top));
      pointer-events: none;
      transform: translateZ(0);
      will-change: height;
      background: linear-gradient(
        to bottom,
        rgba(
            var(--page-top-rgb, 248, 243, 234),
            calc(var(--gradient-overlay-opacity, 1) * 1)
          )
          0%,
        rgba(
            var(--page-top-rgb, 248, 243, 234),
            calc(var(--gradient-overlay-opacity, 1) * 0.92)
          )
          20%,
        rgba(
            var(--page-top-rgb, 248, 243, 234),
            calc(var(--gradient-overlay-opacity, 1) * 0.65)
          )
          45%,
        rgba(var(--page-top-rgb, 248, 243, 234), 0) 100%
      );

      @media (orientation: portrait) {
        /*
         * Over-cover the top blur region during iOS dynamic toolbar resize to
         * avoid momentary sharp text seams while viewport height is changing.
         */
        height: max(
          calc(220px + var(--blur-overscan)),
          calc(18dvh + var(--blur-overscan) + env(safe-area-inset-top))
        );
      }
    }

    .gradient-blur > div,
    .gradient-blur::before,
    .gradient-blur::after {
      position: absolute;
      inset: 0 0 var(--blur-overscan) 0;
      transform: translateY(var(--blur-overscan));
    }

    .gradient-blur::before {
      content: '';
      z-index: 1;
      mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 75%,
        rgba(0, 0, 0, 1) 87.5%,
        rgba(0, 0, 0, 1) 100%
      );
      -webkit-mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 75%,
        rgba(0, 0, 0, 1) 87.5%,
        rgba(0, 0, 0, 1) 100%
      );
    }

    .gradient-blur > div:nth-of-type(1) {
      z-index: 2;
      backdrop-filter: blur(1px);
      -webkit-backdrop-filter: blur(1px);
      mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 62.5%,
        rgba(0, 0, 0, 1) 75%,
        rgba(0, 0, 0, 1) 87.5%,
        rgba(0, 0, 0, 0) 100%
      );
      -webkit-mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 62.5%,
        rgba(0, 0, 0, 1) 75%,
        rgba(0, 0, 0, 1) 87.5%,
        rgba(0, 0, 0, 0) 100%
      );
    }

    .gradient-blur > div:nth-of-type(2) {
      z-index: 3;
      backdrop-filter: blur(2px);
      -webkit-backdrop-filter: blur(2px);
      mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 50%,
        rgba(0, 0, 0, 1) 62.5%,
        rgba(0, 0, 0, 1) 75%,
        rgba(0, 0, 0, 0) 87.5%
      );
      -webkit-mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 50%,
        rgba(0, 0, 0, 1) 62.5%,
        rgba(0, 0, 0, 1) 75%,
        rgba(0, 0, 0, 0) 87.5%
      );
    }

    .gradient-blur > div:nth-of-type(3) {
      z-index: 4;
      backdrop-filter: blur(4px);
      -webkit-backdrop-filter: blur(4px);
      mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 37.5%,
        rgba(0, 0, 0, 1) 50%,
        rgba(0, 0, 0, 1) 62.5%,
        rgba(0, 0, 0, 0) 75%
      );
      -webkit-mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 37.5%,
        rgba(0, 0, 0, 1) 50%,
        rgba(0, 0, 0, 1) 62.5%,
        rgba(0, 0, 0, 0) 75%
      );
    }

    .gradient-blur > div:nth-of-type(4) {
      z-index: 5;
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 25%,
        rgba(0, 0, 0, 1) 37.5%,
        rgba(0, 0, 0, 1) 50%,
        rgba(0, 0, 0, 0) 62.5%
      );
      -webkit-mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 25%,
        rgba(0, 0, 0, 1) 37.5%,
        rgba(0, 0, 0, 1) 50%,
        rgba(0, 0, 0, 0) 62.5%
      );
    }

    .gradient-blur > div:nth-of-type(5) {
      z-index: 6;
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 12.5%,
        rgba(0, 0, 0, 1) 25%,
        rgba(0, 0, 0, 1) 37.5%,
        rgba(0, 0, 0, 0) 50%
      );
      -webkit-mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 12.5%,
        rgba(0, 0, 0, 1) 25%,
        rgba(0, 0, 0, 1) 37.5%,
        rgba(0, 0, 0, 0) 50%
      );
    }

    .gradient-blur > div:nth-of-type(6) {
      z-index: 7;
      backdrop-filter: blur(32px);
      -webkit-backdrop-filter: blur(32px);
      mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, 1) 12.5%,
        rgba(0, 0, 0, 1) 25%,
        rgba(0, 0, 0, 0) 37.5%
      );
      -webkit-mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, 1) 12.5%,
        rgba(0, 0, 0, 1) 25%,
        rgba(0, 0, 0, 0) 37.5%
      );
    }

    .gradient-blur::after {
      content: '';
      z-index: 8;
      backdrop-filter: blur(64px);
      -webkit-backdrop-filter: blur(64px);
      mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 1) 0%,
        rgba(0, 0, 0, 1) 12.5%,
        rgba(0, 0, 0, 0) 25%
      );
      -webkit-mask: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 1) 0%,
        rgba(0, 0, 0, 1) 12.5%,
        rgba(0, 0, 0, 0) 25%
      );
    }

    h1 .title-mark {
      font-size: 74px;
      margin-right: 8px;

      @media (orientation: portrait) {
        font-size: 66px;
      }
    }

    .intro-text {
      @media (orientation: portrait) {
        margin-top: 64px;
      }
    }

    p {
      text-align: justify;
    }

    #buttons {
      display: flex;
      flex-direction: row;
      justify-content: center;
      gap: 48px;
      padding: 16px;
      margin-bottom: 32px;

      @media (orientation: portrait) {
        justify-content: space-between;
        padding: 4px;
        gap: 0;
      }
    }

    #buttons a {
      background: none;
      border: 1px solid black;
      padding: 12px 16px;
      font-size: 15px;
      border-radius: 2px;
      border: none;
      display: flex;
      gap: 8px;
      align-items: center;
      background-color: rgba(0, 0, 0, 0.05);
      border-radius: 50px;
      transition: all 0.3s ease;
      color: #222;
      text-decoration: none;

      &:hover {
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        cursor: pointer;
        gap: 16px;
      }

      @media (orientation: portrait) {
        padding: 10px;
        font-weight: 400;
      }
    }

    a span {
      font-size: 20px;
    }

    section {
      margin-top: 32px;
    }

    h2 {
      color: #222;
      font-weight: 500;
      font-family: 'Editorial Old', serif;
      font-size: 34px;
      margin: 0;

      @media (orientation: portrait) {
        margin-left: 0;
      }
    }

    ul {
      list-style: none;
      margin-left: 0;
      padding-left: 0;
    }

    li {
      line-height: 1.7em;
    }

    li:before {
      padding-right: 0.2em;
    }

    li a {
      text-decoration: none;
      color: #222;
      background-color: rgba(0, 0, 0, 0.08);
      padding: 1px 4px;
      border-radius: 2px;
      margin-right: 1px;
      cursor: pointer;

      &:hover {
        background-color: rgba(0, 0, 0, 0.12);
      }
    }

    #software li:before {
      content: '✽';
    }

    #hardware li:before {
      content: '✜';
    }

    #garden li:before {
      content: '✧';
    }

    #blog li:before {
      content: '✣';
    }

    #about li:before {
      content: '✶';
    }
  </style>
</div>
